@{
    ViewData["Title"] = "MyAccount";
}

<div class="myaccount-card">

    <!-- HEADER -->
    <h1 class="myaccount-title">Welcome back, Michael</h1>

    <!-- TWO COLUMN GRID -->
    <div class="account-layout">

        <!-- LEFT COLUMN -->
        <section class="account-summary">
            <!-- PROFILE HEADER WITH AVATAR -->
            <div class="profile-card-header">
                <div class="profile-avatar">
                    <!-- Fallback initials; later replace with backend -->
                    <span class="avatar-initials">MJ</span>

                    <!-- Or use an image instead:
                    <img src="/img/users/michael.jpg" alt="Michael Jordan" />
                    -->
                </div>

                <div class="profile-main">
                    <!-- TODO: replace with backend full name -->
                    <h3 class="profile-name">Michael Jordan</h3>
                </div>
            </div>

            <!-- PROFILE FIELDS -->
            <div class="account-fields">
                <div class="field-row">
                    <span class="field-label">First Name</span>
                    <span class="field-value">Michael</span>
                </div>

                <div class="field-row">
                    <span class="field-label">Last Name</span>
                    <span class="field-value">Jordan</span>
                </div>

                <div class="field-row">
                    <span class="field-label">Phone</span>
                    <span class="field-value">+64 021710615</span>
                </div>

                <div class="field-row">
                    <span class="field-label">Email</span>
                    <span class="field-value">mj@gmail.com</span>
                </div>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="account-actions">
                <a class="btn-secondary">Edit Account</a>
                <a class="btn-secondary">Change Password</a>
            </div>
        </section>

        <!-- RIGHT COLUMN -->
        <section class="account-bookings">
            <h3 class="section-title">Booking history</h3>
            <p class="section-subtitle">
                Showing your active and past bookings.
            </p>

            <table class="bookings-table">
                <thead>
                    <tr>
                        <th>Booking #</th>
                        <th>Event Name</th>
                        <th>Date &amp; Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="booking-active">
                        <td>#OB-10234</td>
                        <td>Milford Sound Cruise</td>
                        <td>12 Nov 2025, 14:00</td>
                        <td>Active</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>
