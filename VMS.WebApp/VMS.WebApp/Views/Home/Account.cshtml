<!-- Call MyAccountViewModel here -->

@{
    ViewData["Title"] = "My Account";
}

<div class="myaccount-card">
    <div class="accountinfo-card">

            <h2>Welcome back, FirstName</h2> <!-- GetName here -->
        




























            <div class="account-layout">
                <!-- LEFT: Booking history -->
                <div class="account-bookings">
                    <h3>Booking history</h3>
                    <p class="section-subtitle">
                        Showing your active and past bookings.
                    </p>

                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        <table class="bookings-table">
                            <thead>
                                <tr>
                                    <th>Booking #</th>
                                    <th>Event Name</th>
                                    <th>Location</th>
                                    <th>Date &amp; Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var b in Model.Bookings)
                                {
                                    <tr class="@(b.IsActive ? "booking-active" : "booking-inactive")">
                                        <td>@b.BookingNumber</td>
                                        <td>@b.EventName</td>
                                        <td>@b.Location</td>
                                        <td>@b.DateTime.ToString("dd MMM yyyy, HH:mm")</td>
                                        <td>@(b.IsActive ? "Active" : "Completed")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>You don’t have any bookings yet.</p>
                    }
                </div>

                <!-- RIGHT: Account details (read-only) -->
                <div class="account-details">
                    <h3>Account details</h3>
                    <p class="section-subtitle">
                        These details are pulled from your account in the database.
                    </p>

                    <div class="details-list">
                        <div class="details-row">
                            <span class="details-label">First Name</span>
                            <span class="details-value">@Model.FirstName</span>
                        </div>
                        <div class="details-row">
                            <span class="details-label">Last Name</span>
                            <span class="details-value">@Model.LastName</span>
                        </div>
                        <div class="details-row">
                            <span class="details-label">Phone</span>
                            <span class="details-value">@Model.Phone</span>
                        </div>
                        <div class="details-row">
                            <span class="details-label">Email</span>
                            <span class="details-value">@Model.Email</span>
                        </div>
                        <div class="details-row">
                            <span class="details-label">Interest</span>
                            <span class="details-value">@Model.Interest</span>
                        </div>
                    </div>

                    <!-- Optional: link to edit page -->

                    <a asp-controller="Account" asp-action="Edit" class="nav-login-btn">
                        Edit details
                    </a>

                    <form asp-controller="Home" asp-action="Logout" method="post" style="margin-top:12px;">
                        <button type="submit" class="logout-btn">
                            Logout
                        </button>

                    </form>
                    <a asp-controller="Account" asp-action="Edit" class="nav-login-btn">
                        Edit details


                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
