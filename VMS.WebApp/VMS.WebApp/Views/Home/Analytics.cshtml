@{
    ViewData["Title"] = "Analytics Dashboard";
}

    <div class="analytics-page">

        <!-- Header Section -->
        <div class="analytics-header">
            <div>
                <h1>Analytics Dashboard</h1>
                <p class="analytics-subtitle">Onewhero Bay Heritage Park</p>
            </div>
        </div>

        <!-- Statistics Cards Grid -->
        <div class="stats-grid">

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-users"></i>
                </div>
                <h3 class="stat-title">Total Visitors</h3>
                <p class="stat-value" id="total-visitors">Loading...</p>
                <p class="stat-change">Registered users</p>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-calendar-check"></i>
                </div>
                <h3 class="stat-title">Active Bookings</h3>
                <p class="stat-value" id="active-bookings">Loading...</p>
                <p class="stat-change">Currently scheduled</p>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-chart-line"></i>
                </div>
                <h3 class="stat-title">This Month</h3>
                <p class="stat-value" id="month-bookings">Loading...</p>
                <p class="stat-change">Monthly bookings</p>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-dollar-sign"></i>
                </div>
                <h3 class="stat-title">Revenue</h3>
                <p class="stat-value" id="revenue">Loading...</p>
                <p class="stat-change">This month</p>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-calendar-days"></i>
                </div>
                <h3 class="stat-title">Upcoming Events</h3>
                <p class="stat-value" id="upcoming-events">Loading...</p>
                <p class="stat-change">Next 30 days</p>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fa-solid fa-check-circle"></i>
                </div>
                <h3 class="stat-title">Completed Events</h3>
                <p class="stat-value" id="completed-events">Loading...</p>
                <p class="stat-change">This month</p>
            </div>

        </div>

        <!-- Content Grid (Bookings + Events) -->
        <div class="content-grid">

            <!-- Recent Bookings Card -->
            <div class="content-card">
                <h2>Recent Bookings</h2>
                <div class="booking-list" id="recent-bookings-list">
                    <p class="no-data">Loading bookings...</p>
                </div>
            </div>

            <!-- Popular Events Card -->
            <div class="content-card">
                <h2>Popular Events</h2>
                <div class="events-list" id="popular-events-list">
                    <p class="no-data">Loading events...</p>
                </div>
            </div>

        </div>

    </div>

    <!-- JavaScript -->
    <script src="~/js/Analytics.js"></script>