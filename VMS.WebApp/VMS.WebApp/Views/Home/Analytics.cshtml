@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="analytics-page">
    <!-- Page Header -->
    <div class="analytics-header">
        <div>
            <h1>Analytics Dashboard</h1>
            <p class="analytics-subtitle">Onewhero Bay Heritage Park</p>
        </div>
        <a href="#" class="btn btn-primary">
            <i class="fa-solid fa-paper-plane"></i>
            Send Promotion
        </a>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-users"></i>
            </div>
            <h3 class="stat-title">Total Visitors</h3>
            <p class="stat-value">1,234</p>
            <p class="stat-change positive">+12% from last month</p>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-calendar-check"></i>
            </div>
            <h3 class="stat-title">Active Bookings</h3>
            <p class="stat-value">40</p>
            <p class="stat-change">Currently scheduled</p>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-chart-line"></i>
            </div>
            <h3 class="stat-title">This Month</h3>
            <p class="stat-value">156</p>
            <p class="stat-change positive">+8% from last month</p>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-dollar-sign"></i>
            </div>
            <h3 class="stat-title">Revenue</h3>
            <p class="stat-value">$12,450</p>
            <p class="stat-change">This month</p>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-calendar-days"></i>
            </div>
            <h3 class="stat-title">Upcoming Events</h3>
            <p class="stat-value">16</p>
            <p class="stat-change">Next 30 days</p>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fa-solid fa-check-circle"></i>
            </div>
            <h3 class="stat-title">Completed Events</h3>
            <p class="stat-value">23</p>
            <p class="stat-change">This month</p>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="content-grid">
        <!-- Recent Bookings -->
        <div class="content-card">
            <h2>Recent Bookings</h2>
            <div class="booking-list">
                <div class="booking-item">
                    <div class="booking-info">
                        <p class="booking-name">John Cena</p>
                        <p class="booking-event">Milford Sound Cruise</p>
                    </div>
                    <div class="booking-details">
                        <p class="booking-date">11-11-2025</p>
                        <span class="status-badge confirmed">Confirmed</span>
                    </div>
                </div>

                <div class="booking-item">
                    <div class="booking-info">
                        <p class="booking-name">Sarah Johnson</p>
                        <p class="booking-event">Heritage Walk Tour</p>
                    </div>
                    <div class="booking-details">
                        <p class="booking-date">16-11-2025</p>
                        <span class="status-badge pending">Pending</span>
                    </div>
                </div>

                <div class="booking-item">
                    <div class="booking-info">
                        <p class="booking-name">Mike Chen</p>
                        <p class="booking-event">Safety Briefing</p>
                    </div>
                    <div class="booking-details">
                        <p class="booking-date">17-11-2025</p>
                        <span class="status-badge confirmed">Confirmed</span>
                    </div>
                </div>

                <div class="booking-item">
                    <div class="booking-info">
                        <p class="booking-name">Emma Wilson</p>
                        <p class="booking-event">Visitor Orientation</p>
                    </div>
                    <div class="booking-details">
                        <p class="booking-date">18-11-2025</p>
                        <span class="status-badge confirmed">Confirmed</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Events -->
        <div class="content-card">
            <h2>Popular Events</h2>
            <div class="events-list">
                <div class="event-item">
                    <div class="event-header">
                        <span class="event-name">Milford Sound Cruise</span>
                        <span class="event-count">45 bookings</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 100%;"></div>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-header">
                        <span class="event-name">Heritage Walk Tour</span>
                        <span class="event-count">38 bookings</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 84%;"></div>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-header">
                        <span class="event-name">Safety Briefing</span>
                        <span class="event-count">31 bookings</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 69%;"></div>
                    </div>
                </div>

                <div class="event-item">
                    <div class="event-header">
                        <span class="event-name">Visitor Orientation</span>
                        <span class="event-count">28 bookings</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 62%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>