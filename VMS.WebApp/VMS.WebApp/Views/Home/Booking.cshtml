@{
    ViewData["Title"] = "Booking";
}

<!-- HEADER -->
<section class="hero">
    <h1>Booking</h1>
    <p> Make your visit truly memorable. Discover our exceptional experiences from guided 
        heritage tours and scenic nature cruises to hands-on workshops for all ages.</p>
</section>
    

<!-- BOOKING LAYOUT -->
<section class="booking-layout">

    <!-- LEFT SIDE: Active bookings + Event summary -->
    <div class="booking-left">

        <!-- Current Active Bookings -->
        <div class="active-bookings">
            <h2>Current Active Bookings</h2>
            <p class="active-bookings-intro">
                Here are your upcoming bookings at Onewhero Bay Heritage Park.
            </p>

            <div class="active-bookings-table-wrapper">
                <table class="active-bookings-table">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Event</th>
                            <th>Date</th>
                            <th>Guests</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#OB-10234</td>
                            <td>Milford Sound Cruise</td>
                            <td>12 Nov 2025</td>
                            <td>2 Adults</td>
                            <td><span class="status-pill status-confirmed">Confirmed</span></td>
                        </tr>
                        <tr>
                            <td>#OB-10218</td>
                            <td>Heritage Walk Tour</td>
                            <td>20 Nov 2025</td>
                            <td>3 Guests</td>
                            <td><span class="status-pill status-pending">Pending</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Event Summary -->
        <div class="booking-summary">
            <article class="booking-card">
                <img src="~/img/milford.jpg")" alt="Milford Sound Cruise">

                <div class="booking-card-content">
                    <h2>Milford Sound Cruise</h2>
                    <p class="booking-meta">Monday to Friday · 8:00 AM – 5:00 PM</p>
                    <p class="booking-desc">
                        Sail through the stunning fjords surrounded by waterfalls, lush native forest,
                        and towering cliffs. This full-day guided cruise includes refreshments and photo
                        opportunities along the way.
                    </p>
                    <p class="booking-price">
                        From $250.00 per adult · $125.00 per child
                    </p>
                </div>
            </article>

            <a href="events.html" class="back-link">← Back to all events</a>
        </div>

    </div>


    <!-- RIGHT SIDE: Booking Details form -->
    <div class="booking-form-wrapper">
        <h2>Booking Details</h2>
        <p>
            Please provide your booking information. You’ll receive a confirmation email once complete.
        </p>

        <form>
            <div>
                <label for="name">Full Name</label>
                <input id="name" type="text" required />
            </div>

            <div>
                <label for="email">Email</label>
                <input id="email" type="email" required />
            </div>

            <div class="two-col">
                <div>
                    <label for="date">Preferred Date</label>
                    <input id="date" type="date" required />
                </div>
                <div>
                    <label for="time">Preferred Time</label>
                    <select id="time" required>
                        <option value="">Select a time</option>
                        <option>8:00 AM</option>
                        <option>10:00 AM</option>
                        <option>1:00 PM</option>
                    </select>
                </div>
            </div>

            <div class="two-col">
                <div>
                    <label for="adults">Adults</label>
                    <input id="adults" type="number" min="1" value="1" />
                </div>
                <div>
                    <label for="children">Children</label>
                    <input id="children" type="number" min="0" value="0" />
                </div>
            </div>

            <div>
                <label for="notes">Special Requests</label>
                <textarea id="notes" rows="3"></textarea>
            </div>

            <div class="total-row">
                <span>Estimated Total</span>
                <strong>$250.00</strong>
            </div>

            <button type="submit" class="primary-btn">Confirm Booking</button>
        </form>
    </div>
</section>

<!-- FAQ  -->
<section class="faq-section">
    <h3>Frequently Asked Questions</h3>
    <div class="faq-item">
        <div class="faq-question">Can I reschedule my booking?</div>
        <div class="faq-answer">
            Yes, contact us up to 48 hours before your visit to change your date or time.
        </div>
    </div>
    <div class="faq-item">
        <div class="faq-question">Do you offer group discounts?</div>
        <div class="faq-answer">
            Group rates are available for bookings of 10 or more guests — please inquire before checkout.
        </div>
    </div>
</section>