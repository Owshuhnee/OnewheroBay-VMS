@{
    ViewData["Title"] = "Register";
}

<div class="register-card">
    <div class="register-content">
        <form id="registerForm"
              method="post"
              asp-action="Register">

            <h1>Create an account</h1>

            <!-- 2-COLUMN GRID -->
            <div class="register-grid">
                <div>
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="FirstName" required />

                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="LastName" required />

                    <label for="registerEmail">Email</label>
                    <input type="email" id="registerEmail" name="Email" required />
                </div>

                <div>
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" name="Phone" required />

                    <label for="registerPassword">Create Password</label>
                    <input type="password" id="registerPassword" name="Password" required />

                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="ConfirmPassword" required />
                </div>
            </div>

            <!-- BOTTOM SECTION -->
            <div class="form-group" style="margin-top: 20px;">
                <p style="font-weight:600; margin-bottom:8px;">What are you most interested in?</p>

                <label class="register-check">
                    <input type="checkbox" name="SelectedInterests" value="tours" />
                    Tours
                </label>

                <label class="register-check">
                    <input type="checkbox" name="SelectedInterests" value="nature" />
                    Nature & walks
                </label>

                <label class="register-check">
                    <input type="checkbox" name="SelectedInterests" value="workshops" />
                    Workshops
                </label>

                <label class="register-check">
                    <input type="checkbox" name="SelectedInterests" value="special" />
                    Special events
                </label>
            </div>

            </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            const pwd = document.getElementById('registerPassword').value;
            const confirm = document.getElementById('confirmPassword').value;

            if (pwd !== confirm) {
                e.preventDefault();
                alert('Passwords do not match. Please re-enter.');
            }
        });
    </script>
}
