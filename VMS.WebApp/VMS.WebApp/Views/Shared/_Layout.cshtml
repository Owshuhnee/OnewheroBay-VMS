<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VMS.WebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VMS.WebApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="top-nav-wrapper">
            <div class="top-nav-inner navbar navbar-expand-lg navbar-light">

                <!-- Logo (left) -->
                <div class="nav-logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Onewhero Bay Logo" />
                    </a>
                </div>

                <!-- Hamburger button (shows on small screens) -->
                <button class="navbar-toggler ms-auto" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible content: links + login -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNav">

                    <!-- Center nav links -->
                    <ul class="navbar-nav mx-auto nav-links">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ParkInfo">Park Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Booking">Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Promotions">Promotions</a>
                        </li>
                    </ul>

                    <!-- Login/Profile (right) -->
                    <div class="nav-login ms-lg-3">
                        <a asp-controller="Home" asp-action="Login" class="nav-login-btn">
                            Log In/Profile
                        </a>
                    </div>

                </div>

            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VMS.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
