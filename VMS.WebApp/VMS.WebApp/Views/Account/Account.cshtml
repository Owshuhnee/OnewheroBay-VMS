@using Microsoft.AspNetCore.Http
@model VMS.WebApp.Models.AccountViewModel

<div class="account-page">
    <!-- HERO -->
    <section class="account-hero">
        <h1>Welcome back, @Model.DisplayName</h1>
        <p>
            Manage your details, review your bookings, and plan your next visit to
            Onewhero Bay Heritage Park.
        </p>
    </section>

    <!-- MAIN LAYOUT -->
    <section class="account-layout">

        <!-- LEFT: PROFILE CARD -->
        <article class="account-card account-profile">
            <header class="account-header">
                <div class="initials-circle">@Model.Initials</div>
                <div>
                    <h2>@Model.DisplayName</h2>
                    <p class="account-tagline">
                        Park visitor · Onewhero Bay Heritage Park
                    </p>
                </div>
            </header>

            <dl class="account-details">
                <div class="detail-row">
                    <dt>First name</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.FirstName) ? "Not provided" : Model.FirstName)</dd>
                </div>
                <div class="detail-row">
                    <dt>Last name</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.LastName) ? "Not provided" : Model.LastName)</dd>
                </div>
                <div class="detail-row">
                    <dt>Phone</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.Phone) ? "Not provided" : Model.Phone)</dd>
                </div>
                <div class="detail-row">
                    <dt>Email</dt>
                    <dd>@(string.IsNullOrWhiteSpace(Model.Email) ? "Not provided" : Model.Email)</dd>
                </div>
            </dl>

            <div class="account-actions">
                <a asp-controller="Home" asp-action="EditAccount" class="btn btn-secondary">
                    Edit account
                </a>
                <a asp-controller="Home" asp-action="ChangePassword" class="btn btn-secondary">
                    Change password
                </a>
            </div>
         </article>

        <!-- RIGHT: BOOKINGS CARD -->
        <article class="account-card account-bookings">
            <header class="account-bookings-header">
                <h2>Booking history</h2>
                <p>Showing your recent and upcoming bookings.</p>
            </header>

            @if (Model.Bookings != null && Model.Bookings.Any())
            {
                <div class="account-table-wrapper">
                    <table class="account-table">
                        <thead>
                            <tr>
                                <th>Booking #</th>
                                <th>Event</th>
                                <th>Date &amp; time</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model.Bookings)
                            {
                                <tr>
                                    <td>@b.BookingId</td>
                                    <td>@b.EventName</td>
                                    <td>
                                        @b.BookingDate.ToString("dd MMM yyyy")
                                        @if (b.BookingTime.HasValue)
                                        {
                                            @(" " + b.BookingTime.Value.ToString(@"hh\:mm"))
                                        }
                                    </td>
                                    <td>
                                        <span class="status-badge status-active">
                                            @b.BookingStatus
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>You don’t have any bookings yet.</p>
            }

            <div class="account-bookings-cta">
                <p>Ready for another visit?</p>
                <a asp-controller="BookingsFE" asp-action="Index" class="btn btn-primary">
                    Book a new event
                </a>
            </div>
        </article>

    </section>
    
    <!-- LOG OUT: centered below both cards -->
    <form asp-controller="Home"
          asp-action="Logout"
          method="post"
          class="account-logout">
        <button type="submit" class="btn btn-outline-danger account-logout-btn">
            Log out
        </button>
    </form>
</div>